    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.commercejunction.activity.GujaratiMediumActivity">

    <TextView
        android:id="@+id/standardTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_layout_height"
        android:gravity="center"
        android:text="@string/headTV_Standard"
        android:textColor="@color/colorUniversalforApp"
        android:textSize="@dimen/textView_Size"
        android:textStyle="bold" />

    <View
        android:id="@+id/afterStdTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginTop="@dimen/view_divider_margin_top"
        android:background="?android:attr/listDivider" />

