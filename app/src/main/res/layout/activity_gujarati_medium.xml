                    android:id="@+id/std11Sci"
                    android:layout_width="@dimen/grid_button_width"
                    android:layout_height="@dimen/grid_button_height"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:background="@drawable/grid_button_radius"
                    android:drawableTop="@drawable/bag_icon"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_top"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingBottom="@dimen/padding_bottom"
                    android:text="@string/class_11_sci"
